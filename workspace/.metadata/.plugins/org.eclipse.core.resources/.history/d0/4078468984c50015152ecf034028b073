
public class Averagespeed {

	/** This code shows how to deal with wordproblems
	 * This code finds the average speed of a runner with given data
	 * @param args
	 */
	public static void main(String[] args) {
		System.out.println("Hello World");
		System.out.println("\nCalculating the average speed in kilometers");
		System.out.println("Given: 1 mile=1.6 kilometers");
		System.out.println("Distance travelled in kilometer is");
		System.out.println(24*1.6);
		System.out.println("Time in hours is");
		System.out.println(1+(40 / 60)+( 35/(60 * 60)));
		System.out.println("Average speed in kilometers is:");
		System.out.println(24*1.6/(1+(40/60)+(35/(60*60))));

	}

}
